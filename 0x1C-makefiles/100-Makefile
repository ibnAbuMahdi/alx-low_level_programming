SHELL=/bin/bash
CC = gcc
SRC = main.c school.c
NAME = school
OBJ = $(SRC:.c=.o)
#RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean re

ifeq ($(wildcard m.h),)
all:
else
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
endif
clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all


